    <LibraryPath>$(SolutionDir)$(PlatformTarget)\$(Configuration)\;$(LibraryPath)</LibraryPath>
    <IncludePath>$(SolutionDir)\Texturize.Codecs.EXR\include\;$(IncludePath)</IncludePath>
